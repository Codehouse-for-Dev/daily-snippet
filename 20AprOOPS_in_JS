// Blueprint
Difference between class and object 

class Car {
  constructor(brand, color) {
    this.brand = brand;
    this.color = color;
  }

  drive() {
    console.log(`Driving a ${this.color} ${this.brand}`);
  }
}

// Actual car (object)
let myCar = new Car("Toyota", "red");

console.log(myCar.brand);  // Toyota
myCar.drive();             // Driving a red Toyota

